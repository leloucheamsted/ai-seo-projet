# ==============================================
# CONFIGURATION ENVIRONNEMENT - IA SEO FRONT
# ==============================================

# ==============================================
# API BACKEND CONFIGURATION
# ==============================================

# URL de base de l'API backend
NODE_APP_API_BASE_URL=http://localhost:5100

# Endpoints principaux de l'API
NODE_APP_API_AUTH_ENDPOINT=/api/auth
NODE_APP_API_DASHBOARD_ENDPOINT=/api/dashboard
NODE_APP_API_KEYWORD_EXPLORER_ENDPOINT=/api/keyword-explorer
NODE_APP_API_URL_ANALYZER_ENDPOINT=/api/url-analyzer
NODE_APP_API_RANK_MONITOR_ENDPOINT=/api/rank-monitor
NODE_APP_API_TASK_COSTS_ENDPOINT=/api/task-costs

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Nom de l'application
NODE_APP_NAME=IA SEO Tool

# Version de l'application
NODE_APP_VERSION=1.0.0

# Environnement (development, staging, production)
NODE_APP_ENV=development

# URL de base de l'application frontend
REACT_APP_BASE_URL=http://localhost:3000

# ==============================================
# AUTHENTIFICATION CONFIGURATION
# ==============================================

# Durée de validité des tokens (en millisecondes)
# 24 heures = 24 * 60 * 60 * 1000 = 86400000
NODE_APP_TOKEN_EXPIRY=86400000

# Clé pour le stockage local des tokens
NODE_APP_TOKEN_STORAGE_KEY=ia_seo_auth_token

# Clé pour le stockage local des données utilisateur
NODE_APP_USER_STORAGE_KEY=ia_seo_user_data

# ==============================================
# UI/UX CONFIGURATION
# ==============================================

# Configuration des notifications
NODE_APP_NOTIFICATION_DURATION=5000

# Pagination par défaut
NODE_APP_DEFAULT_PAGE_SIZE=20

# Délai de debounce pour la recherche (en ms)
NODE_APP_SEARCH_DEBOUNCE=500

# ==============================================
# FEATURES FLAGS
# ==============================================

# Activer/désactiver certaines fonctionnalités
NODE_APP_ENABLE_KEYWORD_EXPLORER=true
NODE_APP_ENABLE_URL_ANALYZER=true
NODE_APP_ENABLE_RANK_MONITOR=true
NODE_APP_ENABLE_DASHBOARD_ANALYTICS=true
NODE_APP_ENABLE_DARK_MODE=true

# ==============================================
# MICRO FRONT-END CONFIGURATION
# ==============================================

# Activer le registre des modules
NODE_APP_MODULE_REGISTRY_ENABLED=true

# URL du registre des modules (optionnel)
NODE_APP_MODULE_REGISTRY_URL=http://localhost:3002/modules

# Timeout pour le chargement des modules (en ms)
NODE_APP_MODULE_LOADING_TIMEOUT=10000

# Activer le lazy loading des modules
NODE_APP_ENABLE_LAZY_LOADING=true

# Activer le hot reload des modules en développement
NODE_APP_ENABLE_MODULE_HOT_RELOAD=true

# Préchargement des modules critiques
NODE_APP_PRELOAD_CRITICAL_MODULES=true

# ==============================================
# MONITORING & ANALYTICS
# ==============================================

# Configuration pour les logs (optionnel)
NODE_APP_LOG_LEVEL=info

# Activer les logs de développement
NODE_APP_ENABLE_DEV_LOGS=true

# ==============================================
# EXTERNAL SERVICES (si utilisés directement)
# ==============================================

# URL de la documentation API (Swagger)
NODE_APP_API_DOCS_URL=http://localhost:3000/api-docs

# ==============================================
# PERFORMANCE CONFIGURATION
# ==============================================

# Timeout pour les requêtes API (en ms)
NODE_APP_API_TIMEOUT=30000

# Nombre maximum de tentatives pour les requêtes échouées
NODE_APP_MAX_RETRY_ATTEMPTS=3

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================

# Port de développement (optionnel, par défaut 3000)
PORT=3001

# Désactiver l'ouverture automatique du navigateur
BROWSER=none

# Générer des source maps pour le debugging
GENERATE_SOURCEMAP=true

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# Configuration HTTPS pour la production
HTTPS=false

# Configuration des headers de sécurité
NODE_APP_ENABLE_SECURITY_HEADERS=true
